<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:divider="@color/white">
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/head_backcolor"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">
            <com.zhanghao.skinexpert.view.CircleImageView
                android:id="@+id/mylike_post_lv_headimg"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/mylike_post_lv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_darker_gray"
                    android:layout_gravity="center_vertical"
                    android:text="1111"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/mylike_post_lv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="13sp"
                    android:text="1111"
                    android:textColor="@color/text_lighter_gray"
                    />
            </LinearLayout>
        </LinearLayout>
    <ImageView
        android:id="@+id/mylike_post_lv_img"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="fitXY"/>
    <TextView
        android:id="@+id/mylike_post_lv_txt_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/text_normal_gray"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:lineSpacingExtra="2dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/head_backcolor"
        >
        <ImageView
            android:id="@+id/mylike_post_lv_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="2dp"/>
        <TextView
            android:id="@+id/mylike_post_lv_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="18sp"
            android:textColor="@color/text_darker_gray"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/ic_community_like"/>
            <TextView
                android:id="@+id/mylike_post_lv_like_nums"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="12sp"
                android:layout_marginLeft="8dp"
                android:textColor="@color/button_disabled_gray"/>
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/mylike_post_lv_commnet_nums"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="12sp"
                android:layout_marginLeft="8dp"
                android:textColor="@color/button_disabled_gray"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/mylike_post_lv_share"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_community_more"/>

        <ImageView
            android:id="@+id/mylike_post_lv_commnets"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="25dp"/>
        <ImageView
            android:id="@+id/mylike_post_lv_like"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="25dp"
            android:src="@mipmap/ic_community_like_right"
            android:layout_marginRight="25dp"/>
    </LinearLayout>
</LinearLayout>