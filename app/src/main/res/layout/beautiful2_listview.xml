<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="#f0f0f0" />

    <RelativeLayout
        android:id="@+id/b2lv_re"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp">

        <com.zhanghao.skinexpert.view.CircleImageView
            android:id="@+id/b2lv_iv_head"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/b2lv_iv_head"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/b2lv_iv_head"
            android:orientation="vertical">

            <TextView
                android:id="@+id/b2lv_tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="薄荷奶昔"
                android:textColor="#000000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/b2lv_tv_usertime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:text="重干·重敏·非色素·紧致"
                android:textSize="10sp" />
        </LinearLayout>

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/b2lv_ll_viewpager"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

    </LinearLayout>

    <TextView
        android:id="@+id/b2lv_tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="hahaha"
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/b2lv_ll_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>

    <RelativeLayout
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/b2lv_iv_votecount"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_vote_count" />

            <TextView
                android:id="@+id/b2lv_tv_votecount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:text="228"
                android:textSize="12sp" />

            <ImageView
                android:layout_marginLeft="20dp"
                android:id="@+id/b2lv_iv_commentcount"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_community_comment" />

            <TextView
                android:id="@+id/b2lv_tv_commentcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:text="228"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_right"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignBottom="@id/ll_left"
            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/b2lv_iv_more"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginTop="8dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_community_more" />

            <ImageView
                android:id="@+id/b2lv_iv_comment"
                android:layout_marginRight="10dp"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_community_comment_right" />
            />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>