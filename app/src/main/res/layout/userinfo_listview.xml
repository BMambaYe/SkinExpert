<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <com.zhanghao.skinexpert.view.CircleImageView
            android:id="@+id/userinfo_iv_head"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"
            />

        <LinearLayout
            android:id="@+id/ll_userinfo_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/userinfo_iv_head"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/userinfo_iv_head"
            android:orientation="vertical">

            <TextView
                android:id="@+id/userinfo_tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/userinfo_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:textSize="10sp" />
        </LinearLayout>

    </RelativeLayout>
    <ImageView
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        android:id="@+id/userinfo_iv_content"
        android:layout_width="match_parent"
        android:layout_height="250dp" />

    <TextView
        android:id="@+id/userinfo_tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:textSize="12sp" />
    <LinearLayout
        android:id="@+id/ll_userinfo_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_userinfo_tags"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp">

    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_userinfo_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/userinfo_iv_like"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/ic_community_like" />

            <TextView
                android:layout_marginTop="3dp"
                android:id="@+id/userinfo_tv_like_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="12sp"/>

            <ImageView
                android:scaleType="centerCrop"
                android:layout_marginTop="3dp"
                android:id="@+id/userinfo_iv_comment"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/ic_community_comment" />

            <TextView
                android:layout_marginTop="3dp"
                android:id="@+id/userinfo_tv_comment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_right"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignBottom="@id/ll_left"
            android:layout_alignParentRight="true"
            >

            <ImageView
                android:id="@+id/community_more_iv"
                android:layout_marginTop="8dp"
                android:scaleType="centerCrop"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@mipmap/ic_community_more" />

            <ImageView
                android:id="@+id/community_comment_iv"
                android:layout_marginTop="8dp"
                android:scaleType="centerCrop"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/ic_community_comment_right" />

            <CheckBox
                android:id="@+id/community_like_cb"
                android:layout_marginTop="8dp"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:button="@null"
                android:background="@drawable/community_like_select"
                />
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="#f0f0f0"
        />
</LinearLayout>