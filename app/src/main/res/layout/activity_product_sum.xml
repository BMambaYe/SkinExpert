<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_product_sum"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zhanghao.skinexpert.Activity.ProductSumActivity">

    <RelativeLayout
        android:id="@+id/rl_inviteFriends"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFFFFF"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/btn_product_sum_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/ic_return_back"
            android:onClick="onClick" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="产品库" />
        <Button
            android:id="@+id/btn_product_sum_search"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:background="@mipmap/ic_search"
            android:onClick="onClick" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#EBEBEB"
        android:layout_height="40dp"
        android:paddingTop="0.5dp">
        <TextView
            android:id="@+id/tv_product_sum_classify"
            android:layout_width="0dp"
            android:background="#FFFFFF"
            android:layout_marginRight="0.5dp"
            android:layout_height="match_parent"
            android:text="分类"
            android:gravity="center"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_product_sum_function"
            android:layout_width="0dp"
            android:background="#FFFFFF"
            android:text="功效"
            android:gravity="center"
            android:layout_marginRight="0.5dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_product_sum_brand"
            android:layout_width="0dp"
            android:background="#FFFFFF"
            android:text="品牌"
            android:gravity="center"
            android:layout_marginRight="0.5dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_product_sum_price"
            android:layout_width="0dp"
            android:text="价格"
            android:gravity="center"
            android:background="#FFFFFF"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>
    <ListView
        android:id="@+id/lv_product_sum"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>
</LinearLayout>
