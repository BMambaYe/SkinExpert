<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_notification_msg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zhanghao.skinexpert.Activity.NotificationMsgListActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center_vertical">
        <Button
            android:id="@+id/notification_msglist_btn_back"
            android:layout_gravity="center_vertical"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:background="@mipmap/ic_return_back"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:gravity="center"
            android:text="@string/fragment_my_title"
            android:layout_gravity="center_vertical"
            android:textColor="@color/background_material_dark"/>
        <Button
            android:id="@+id/notification_msglist_setting"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:textSize="17sp"
            android:textColor="@color/background_material_dark"
            android:text="@string/notification_msglist_setting"
            android:background="@null"/>
    </LinearLayout>
    <View android:layout_width="match_parent"
          android:layout_height="5dp"
          android:background="#E0E0E0"/>
    <LinearLayout
        android:id="@+id/notification_msglist_skin_btn"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/ic_launcher_message"/>
        <TextView
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/background_material_dark"
            android:layout_marginLeft="10dp"
            android:text="@string/notification_msglist_skinmsg"/>
        />

    </LinearLayout>
</LinearLayout>
