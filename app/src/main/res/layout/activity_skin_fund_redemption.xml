<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/skin_fund_redemption_swipeRefreshLayout"
    tools:context="com.zhanghao.skinexpert.Activity.SkinFundRedemption">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f0efef"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:gravity="center_vertical">
            <Button
                android:id="@+id/skin_fund_redemption_btn_back"
                android:layout_gravity="center_vertical"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:background="@mipmap/ic_return_back"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:layout_marginRight="30dp"
                android:gravity="center"
                android:text="@string/skin_fund_redemption_title"
                android:layout_gravity="center_vertical"
                android:textColor="@color/background_material_dark"/>
        </LinearLayout>
        <ListView
            android:id="@+id/skin_fund_redemption_lv"
            android:layout_width="match_parent"
            android:dividerHeight="6dp"
            android:background="@color/white"
            android:layout_height="match_parent"/>
    </LinearLayout>

</android.support.v4.widget.SwipeRefreshLayout>
