<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zhanghao.skinexpert.fragments.BenefitsFragment">
    <LinearLayout
        android:id="@+id/ll_benefits_titleview"
        android:layout_alignParentTop="true"
        app:layout_widthPercent="100%"
        app:layout_heightPercent="7%">
        <TextView
            android:textSize="23dp"
            android:gravity="center"
            android:text="@string/fragment_benefits_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <WebView
        android:layout_below="@id/ll_benefits_titleview"
        android:id="@+id/webview_benefits"
        app:layout_widthPercent="100%"
        app:layout_heightPercent="93%"
        />

</android.support.percent.PercentRelativeLayout>
